{
    "enable": true,
    "extends": [
        "tslint:latest",
        "tslint-react",
        "tslint:recommended",
        "tslint-config-prettier",
        "tslint-react-hooks",
        "tslint-plugin-prettier"
    ],
    "rules": {
        "no-submodule-imports": [false, "@material-ui"],
        "no-var-requires": false,
        "no-shadowed-variable": false,
        "variable-name": [true, "allow-trailing-underscore", "allow-pascal-case", "ban-keywords"],
        "align": false,
        "comment-format": [true, "check-space"],
        "curly": [true, "as-needed", "multi-line"],
        "eofline": true,
        "react-hooks-nesting": "error",
        "prettier": true,
        "indent": [true, "spaces"],
        "array-bracket-spacing": [
            "error", 
            "always", 
            { "singleValue": true },
            { "objectsInArrays": true },
            { "arraysInArrays": true }
        ],
        "object-curly-spacing": [
            "error", 
            "always", 
            { "arraysInObjects": true },
            { "objectsInObjects": true }
        ],
        "interface-name": [true, "always-prefix"],
        "jsdoc-format": false,
        "no-string-literal": false,
        "max-classes-per-file": [true, 5],
        "max-line-length": false,
        "no-consecutive-blank-lines": [false],
        "no-console": [false],
        "no-duplicate-variable": true,
        "no-trailing-whitespace": false,
        "no-unused-expression": false,
        "no-empty-interface": true,
        "object-literal-sort-keys": false,
        "object-literal-key-quotes": [false],
        "ordered-imports": false,
        "quotemark": [true, "double", "jsx-double"],
        "semicolon": [true, "always"],
        "trailing-comma": [
            true,
            {
                "esSpecCompliant": true
            }
        ],
        "triple-equals": [true, "allow-null-check"]
    }
}
